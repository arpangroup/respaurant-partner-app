<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.EditRestaurantFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16.7dp"
            android:layout_marginRight="16.7dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <!--Store Name-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_store_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Store name"
                    android:text=""
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Description-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Item Description"
                    android:text=""
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Image-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transferent"
                        android:textColor="@color/holo_red_dark"
                        android:text="Change Image"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:text="Image"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/silver"
                        android:textSize="18sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/foodimg_1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray" />



            </LinearLayout>
            <!--Approx Delivery Time-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_delivery_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_delivery_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Approx Delivery Time"
                    android:text=""
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Approx Price for Two-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_approx_price_two_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_price_for_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Selling Price"
                    android:text=""
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="22.3dp"
                android:background="@color/viewline"
                android:layout_marginLeft="16.7dp"
                android:layout_marginRight="16.7dp" />

            <!--Full Address-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Full Address"
                    android:text=""
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--PinCode-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Full Address"
                    android:text=""
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Latitude-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_text_medium"
                        android:hint="Latitude"
                        android:text=""
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <!--Longitude-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_text_medium"
                        android:hint="Latitude"
                        android:text=""
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="22.3dp"
                android:background="@color/viewline"
                android:layout_marginLeft="16.7dp"
                android:layout_marginRight="16.7dp" />

            <!--Certificate-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_certificate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Certificate"
                    android:text=""
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Store Charge-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_store_charge_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_store_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Store Charge"
                    android:text=""
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Min Order Price-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_min_order_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_min_order_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="Min OrderPrice"
                    android:text=""
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#FA0F30"
        android:fontFamily="@font/sfpro_text_medium"
        android:text="Update Item"
        android:textAlignment="center"
        android:layout_marginLeft="16.7dp"
        android:layout_marginRight="16.7dp"
        android:textColor="@color/white"
        android:textSize="18.3sp" />

</LinearLayout>