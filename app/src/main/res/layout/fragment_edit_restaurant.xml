<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.EditRestaurantFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <include
                android:id="@+id/business_details"
                layout="@layout/layout_business_details"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="25dp"
                android:background="@color/viewline" />


            <include
                android:id="@+id/business_extra"
                layout="@layout/layout_business_extra"/>





        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#FA0F30"
        android:fontFamily="@font/sfpro_text_medium"
        android:text="Update Item"
        android:textAlignment="center"
        android:layout_marginLeft="16.7dp"
        android:layout_marginRight="16.7dp"
        android:textColor="@color/white"
        android:textSize="18.3sp" />

</LinearLayout>