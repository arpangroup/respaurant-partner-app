<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="order"
            type="com.example.mainactivity.models.Order" />

        <variable
            name="orderInterface"
            type="com.example.mainactivity.adapters.OrderListAdapter.OrderInterface" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layoutDirection="rtl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{order.orderDate}"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{order.uniqueOrderId.substring(9)}"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{order.user.name}"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/lightsilver" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dish_recycler"
                        android:layout_below="@+id/toolbar"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:setDishes="@{order.orderitems}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_dish1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/lightsilver" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set food preparation time"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/add_cart_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_gray_border"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/minus_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro_display_medium"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:text="-"
                            android:textColor="@color/black"
                            android:onClick="@{() -> orderInterface.onDecreasePreparationTime(order)}"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/increase_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/minus_txt"
                            android:layout_toLeftOf="@+id/plus_text"
                            android:fontFamily="@font/sfpro_display_medium"
                            android:text="@{order.restaurant.deliveryTime + ` mins`}"
                            android:textAlignment="center"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/plus_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro_display_medium"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:text="+"
                            android:textColor="@color/black"
                            android:onClick="@{() -> orderInterface.onIncreasePreparationTime(order)}"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REJECT"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textColor="@color/holo_red_dark"
                            android:onClick="@{() -> orderInterface.onRejectClick(order)}"
                            android:background="@drawable/rounded_red_border" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp">

                            <ProgressBar
                                android:progressDrawable="@drawable/green_progress_drawable"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="42dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center"
                                android:padding="12dp"
                                android:onClick="@{() -> orderInterface.onAcceptClick(order)}"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ACCEPT"
                                    android:textStyle="bold"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/txt_counter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:text="(00:23)"
                                    android:textStyle="bold"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </FrameLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/lightsilver" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>